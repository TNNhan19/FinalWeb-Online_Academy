{{> navbar}}
<div class="container-fluid py-0">
    <div class="row g-0">
        <!-- VIDEO PLAYER -->
        <div class="col-12 col-lg-8 p-3">
            <video id="player" playsinline controls>
                <source src="{{currentLecture.video_url}}" type="video/mp4" />
            </video>
            <h5 class="mt-3">{{currentLecture.title}}</h5>
            <p>{{currentLecture.description}}</p>

            <form method="POST" action="/learn/{{courseId}}/complete/{{currentLecture.id}}">
                <button class="btn btn-success mt-2">Đánh dấu đã học xong</button>
            </form>
        </div>

        <!-- DANH SÁCH BÀI HỌC -->
        <div class="col-12 col-lg-4 border-start p-3">
            <h6 class="fw-bold mb-3">Danh sách bài giảng</h6>
            <ul class="list-group">
                {{#each lectures}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/learn/{{../courseId}}?lecture={{this.id}}">{{this.title}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<!-- Plyr player -->
<script src="https://cdn.plyr.io/3.6.8/plyr.js"></script>
<script>
    const player = new Plyr("#player");
</script>
{{> footer}}