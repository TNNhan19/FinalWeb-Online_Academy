<script>
  // Script for instant favorite button update
  document.addEventListener('DOMContentLoaded', () => {
    // console.log("‚úÖ Detail page JS loaded."); // Optional: Keep for debugging

    const favoriteContainer = document.getElementById('favorite-button-container');

    if (favoriteContainer) {
      // console.log("‚úÖ Favorite container (#favorite-button-container) found."); // Optional

      const initialForm = favoriteContainer.querySelector('form');
      let courseId = null;
      if (initialForm && initialForm.action) {
         const actionParts = initialForm.action.split('/');
         if (actionParts.length >= 3) { courseId = actionParts[actionParts.length - 2]; }
      }
      if (!courseId) {
           console.error("‚ùå ERROR: Could not extract course ID from form action.");
           courseId = '{{course.course_id}}'; // Fallback
           if (!courseId || courseId === 'undefined' || courseId === '') {
                console.error("‚ùå ERROR: Fallback course ID is also invalid."); return;
           }
           console.warn("‚ö†Ô∏è Falling back to Handlebars variable for course ID:", courseId);
      }
      // console.log("‚û°Ô∏è Course ID for favorite logic:", courseId); // Optional


      // Function to update button appearance instantly
      const updateButtonAppearance = (isNowFavorite) => {
        // console.log("üîÑ Updating button appearance. Is now favorite:", isNowFavorite); // Optional
        favoriteContainer.style.opacity = '0.5'; // Dim while processing
        favoriteContainer.style.pointerEvents = 'none';

        if (isNowFavorite) {
          favoriteContainer.innerHTML = `
            <form action="/courses/${courseId}/unfavorite" method="POST" id="unfavorite-form">
              <button type="submit" class="btn btn-outline-danger w-100">
                  <i class="bi bi-heart-fill me-1"></i> B·ªè y√™u th√≠ch
              </button>
            </form>
          `;
        } else {
          favoriteContainer.innerHTML = `
            <form action="/courses/${courseId}/favorite" method="POST" id="favorite-form">
              <button type="submit" class="btn btn-outline-secondary w-100">
                  <i class="bi bi-heart me-1"></i> Th√™m v√†o y√™u th√≠ch
              </button>
            </form>
          `;
        }
        // console.log("‚úÖ Button HTML updated."); // Optional
        setTimeout(() => { // Re-enable after short delay
            favoriteContainer.style.opacity = '1';
            favoriteContainer.style.pointerEvents = 'auto';
        }, 300);
      };

      // Use event delegation on the container for form submissions
      favoriteContainer.addEventListener('submit', async (event) => {
         event.preventDefault(); // Prevent default form submission
         // console.log("üö´ Default form submission prevented."); // Optional

         if (event.target.matches('#favorite-form, #unfavorite-form')) {
              // console.log('üñ±Ô∏è Submit event detected on form:', event.target.id); // Optional

              const form = event.target;
              const url = form.action;
              const method = form.method.toUpperCase();
              let isAddingFavorite = (form.id === 'favorite-form');

              // Show loading state / disable button immediately
              const submitButton = form.querySelector('button');
              if(submitButton) submitButton.disabled = true;
              favoriteContainer.style.opacity = '0.5';
              favoriteContainer.style.pointerEvents = 'none';


              // --- MANUALLY SEND REQUEST USING FETCH ---
              try {
                  // console.log(`üì° Sending ${method} request to: ${url}`); // Optional
                  const response = await fetch(url, {
                      method: method,
                      headers: { 'Accept': 'application/json' }, // Tell server we prefer JSON
                  });

                  // console.log(`üö¶ Server response status: ${response.status}`); // Optional

                  if (response.ok) {
                      // console.log(`‚úÖ Request to ${url} successful.`); // Optional
                      // Update button appearance AFTER successful request
                      updateButtonAppearance(isAddingFavorite);
                  } else {
                      // Handle server errors
                      console.error(`‚ùå Request to ${url} failed with status ${response.status}.`);
                      alert(`L·ªói ${response.status}: Kh√¥ng th·ªÉ c·∫≠p nh·∫≠t danh s√°ch y√™u th√≠ch. Trang s·∫Ω ƒë∆∞·ª£c t·∫£i l·∫°i.`);
                      window.location.reload(); // Reload page on error to reset state
                  }
              } catch (error) {
                  // Handle network errors
                  console.error(`‚ùå Network error during fetch to ${url}:`, error);
                  alert("L·ªói m·∫°ng: Kh√¥ng th·ªÉ k·∫øt n·ªëi. Trang s·∫Ω ƒë∆∞·ª£c t·∫£i l·∫°i.");
                  window.location.reload(); // Reload page on error to reset state
              } finally {
                  // Re-enable button/container in case update failed visually but request went through
                  // (updateButtonAppearance already handles re-enabling on success)
                 if(submitButton) submitButton.disabled = false;
                 // Ensure container is re-enabled if updateButtonAppearance didn't run on error
                 favoriteContainer.style.opacity = '1';
                 favoriteContainer.style.pointerEvents = 'auto';
              }
          } else {
              // console.warn("‚ö†Ô∏è Submit event detected, but not on recognized form."); // Optional
          }
      });
      // console.log("‚úÖ Submit listener (using fetch) attached."); // Optional

    } else {
      console.error("‚ùå ERROR: Favorite button container (#favorite-button-container) was NOT found.");
    }
  });
</script>
