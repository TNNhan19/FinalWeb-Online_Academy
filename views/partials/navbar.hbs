<header class="main-header py-3 border-bottom shadow-sm bg-body sticky-top">
  <div class="container-xxl d-flex align-items-center justify-content-between">

    <form class="d-none d-md-flex align-items-center flex-grow-1 me-3" role="search" style="max-width: 360px;">
      <input type="search" class="form-control rounded-pill px-3" placeholder="Tìm khóa học..." />
      <button type="submit" class="btn btn-link text-primary ms-n5"><i class="bi bi-search"></i></button>
    </form>

    <div class="flex-grow-0 text-center">
      <a href="/" class="brand-logo text-decoration-none">
        <span class="brand-name">Online</span>
        <span class="brand-academy">Academy</span>
      </a>
    </div>

    <div class="flex-grow-1 d-flex justify-content-end align-items-center gap-3">
      {{#if user}}
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle px-2 py-1" data-bs-toggle="dropdown">
            <span class="fw-semibold text-dark">{{user.full_name}}</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm">
            <li><a class="dropdown-item" href="/profile">Hồ sơ cá nhân</a></li>
            <li><a class="dropdown-item" href="/my-courses">Khóa học của tôi</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/auth/logout">Đăng xuất</a></li>
          </ul>
        </div>
      {{else}}
        <a href="/auth/login" class="btn btn-outline-primary rounded-pill px-3">Đăng nhập</a>
        <a href="/auth/register" class="btn btn-primary rounded-pill px-3">Đăng ký</a>
      {{/if}}
    </div>
  </div>
</header>
