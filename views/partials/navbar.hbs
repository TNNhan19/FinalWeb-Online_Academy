<header class="main-header sticky-top bg-white shadow-sm border-bottom py-2">
  <div class="container-xxl">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">

      <!-- ===== Logo (center) ===== -->
      <a href="/" class="d-flex align-items-center text-decoration-none me-auto me-md-3">
        <span class="fs-4 fw-bold text-primary">Online</span>
        <span class="fs-4 fw-bold text-dark ms-1">Academy</span>
      </a>

      <!-- ===== Search (ẩn trên mobile) ===== -->
      <form class="d-none d-md-flex align-items-center flex-grow-1 mx-md-3" role="search" style="max-width: 380px;">
        <div class="input-group">
          <input type="search" class="form-control rounded-pill ps-3 pe-5" placeholder="Tìm khóa học..." />
          <button type="submit" class="btn btn-link position-absolute end-0 me-3 text-primary">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </form>

      <!-- ===== User / Auth Buttons ===== -->
      <div class="d-flex align-items-center gap-2">
        {{#if user}}
          <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle fs-5 me-2 text-primary"></i>
              <span class="fw-semibold">{{user.full_name}}</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
              <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Hồ sơ cá nhân</a></li>
              <li><a class="dropdown-item" href="/my-courses"><i class="bi bi-book me-2"></i>Khóa học của tôi</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
            </ul>
          </div>
        {{else}}
          <a href="/auth/login" class="btn btn-outline-primary rounded-pill px-3 fw-semibold">Login</a>
          <a href="/auth/signup" class="btn btn-primary rounded-pill px-3 fw-semibold">Sign Up</a>
        {{/if}}
      </div>
    </div>
  </div>
</header>
