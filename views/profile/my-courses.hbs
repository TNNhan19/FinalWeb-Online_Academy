{{> navbar}}
<div class="container mt-4">
    <h3 class="mb-3">Khóa học của tôi</h3>

    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    {{#if courses.length}}
    <div class="row">
        {{#each courses}}
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h6 class="fw-bold">{{this.title}}</h6>
                    <p class="text-muted small mb-1">{{this.instructor}}</p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: {{this.progress}}%;"
                            aria-valuenow="{{this.progress}}" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                    <p class="mt-2 small text-end text-primary">{{this.progress}}% hoàn thành</p>
                    <a href="/courses/{{this.course_id}}" class="btn btn-outline-primary w-100 mt-2">Vào học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="text-muted">Bạn chưa đăng ký khóa học nào.</p>
    {{/if}}
</div>
{{> footer}}