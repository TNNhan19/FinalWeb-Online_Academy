{{! views/profile/watchlist.hbs }}
{{> navbar}}

<div class="container mt-4">
    <h3>Danh sách khóa học yêu thích</h3>

    {{#if courses.length}}
    <div class="row">
        {{#each courses}}
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h6 class="card-title">{{this.title}}</h6>
                    <p class="text-muted small">{{this.instructor}}</p>
                    {{#if this.discount_price}}
                    <p><del>{{this.price}}</del> <strong>{{this.discount_price}}</strong></p>
                    {{else}}
                    <p><strong>{{this.price}}</strong></p>
                    {{/if}}
                    <form method="POST" action="/watchlist/remove/{{this.id}}">
                        <button class="btn btn-outline-danger btn-sm w-100">Xóa</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="text-muted">Bạn chưa thêm khóa học nào vào danh sách yêu thích.</p>
    {{/if}}
</div>

{{> footer}}