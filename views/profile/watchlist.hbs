<div class="container mt-4">
    <h2>Khoá học yêu thích</h2>
    <div class="row mt-3">
        {{#each courses}}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="{{this.thumbnail_url}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text text-danger">{{this.discount_price}} ₫ <span
                            class="text-muted text-decoration-line-through">{{this.price}} ₫</span></p>
                    <form method="POST" action="/profile/watchlist/remove/{{this.course_id}}">
                        <button class="btn btn-outline-danger btn-sm">Xóa khỏi danh sách</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>