{{! views/profile/edit-profile.hbs }}
{{> navbar}}
<div class="container mt-4">
    <h3>Hồ sơ cá nhân</h3>
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <form action="/profile/update" method="POST" class="mb-4">
        <div class="mb-3">
            <label>Họ tên</label>
            <input type="text" name="fullname" value="{{student.fullname}}" class="form-control">
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input type="email" name="email" value="{{student.email}}" class="form-control" readonly>
        </div>
        <button class="btn btn-primary">Cập nhật</button>
    </form>

    <hr>
    <h5>Đổi mật khẩu</h5>
    <form action="/profile/change-password" method="POST">
        <input type="password" name="oldPass" placeholder="Mật khẩu cũ" class="form-control mb-2">
        <input type="password" name="newPass" placeholder="Mật khẩu mới" class="form-control mb-2">
        <button class="btn btn-warning">Đổi mật khẩu</button>
    </form>
</div>
{{> footer}}