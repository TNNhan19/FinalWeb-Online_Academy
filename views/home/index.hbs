{{#section "head"}}<meta name="description" content="Trang chủ - Online Academy">{{/section}}

<div class="home-hero p-4 p-md-5 mb-4">
  <h4 class="text-center mb-3 fw-semibold">DANH MỤC PHỔ BIẾN NHẤT TUẦN QUA</h4>
  <div class="filters d-flex gap-2 gap-md-3 flex-nowrap overflow-auto justify-content-center">
    {{#each filters}}
      <a href="/courses?category={{id}}" class="btn rounded-pill">{{label}}</a>
    {{/each}}
  </div>
</div>

<div class="row g-4">
  <!-- Left -->
  <aside class="col-xl-3 col-lg-4 col-md-12 order-2 order-lg-1 mb-3 mb-lg-0">
        <div class="card sidebar-card shadow-sm sticky-top top-4">
      <div class="card-header fw-semibold">10 KHÓA HỌC ĐƯỢC XEM NHIỀU NHẤT</div>
      <div class="list-group list-group-flush">
        {{#each topViewed}}{{> mini-course-item}}{{/each}}
      </div>
    </div>
  </aside>

  <!-- Center -->
  <section class="col-xl-6 col-lg-8 col-md-12 order-1 order-lg-2">
    {{#each sections}}
      <div class="mb-4">
        <h5 class="fw-semibold mb-3">{{title}}</h5>
        <div class="row row-cols-1 row-cols-sm-2 g-3">
          {{#each courses}}
            <div class="col">
              <div class="card course-card h-100 position-relative">
                <div class="position-relative">
                  <div class="ratio ratio-16x9">
                    <img src="/images/{{hero_image_url}}.jpg" class="w-100 h-100 object-fit-cover rounded-top" alt="{{title}}">
                  </div>
                  <span class="badge-lock position-absolute top-0 end-0 m-2">LOCK</span>
                </div>
                <div class="card-body d-flex flex-column">
                  <h6 class="mb-1 text-truncate">{{title}}</h6>
                  <div class="small two-lines mb-2">{{subtitle}}</div>
                  <div class="d-flex align-items-center gap-2 small text-muted mb-2">
                    <i class="bi bi-star-fill"></i><span class="fw-semibold">{{rating}}</span>
                    <span>•</span><span>{{students}} hv</span>
                    <span>•</span><span>{{lessons}} bài</span>
                    <span>•</span><span>{{duration}}</span>
                  </div>
                  <div class="mt-auto d-flex justify-content-between align-items-center">
                    {{#if promo_price}}
                      <div><span class="fw-bold">{{promo_price}}</span>
                        <span class="text-decoration-line-through text-muted small">{{price}}</span>
                      </div>
                    {{else}}
                      <div class="fw-bold">{{price}}</div>
                    {{/if}}
                    <a href="/courses/course-detail/{{id}}" class="btn btn-outline-primary btn-sm">Xem</a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/each}}

    <div class="d-flex justify-content-center align-items-center gap-3 my-4">
      <a class="btn btn-outline-secondary rounded-pill px-4" href="?page={{pagination.prev}}">LÙI</a>
      <div class="pager-dots d-flex gap-2">
        {{#each pagination.dots}}<span class="dot {{#if active}}active{{/if}}"></span>{{/each}}
      </div>
      <a class="btn btn-outline-secondary rounded-pill px-4" href="?page={{pagination.next}}">LỚN</a>
    </div>
  </section>

  <!-- Right -->
  <aside class="col-xl-3 col-lg-12 col-md-12 order-3">
    <div class="card sidebar-card shadow-sm sticky-top top-4">
      <div class="card-header fw-semibold">10 KHÓA HỌC MỚI NHẤT</div>
      <div class="list-group list-group-flush">
        {{#each newest}}{{> mini-course-item}}{{/each}}
      </div>
    </div>
  </aside>
</div>
