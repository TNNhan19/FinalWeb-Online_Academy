<h4 class="mb-4">👥 Danh sách người dùng</h4>

<h5>Giảng viên</h5>
<table class="table table-sm table-hover">
  <thead><tr><th>ID</th><th>Tên</th><th>Email</th><th>Tổng học viên</th></tr></thead>
  <tbody>
    {{#each instructors}}
    <tr><td>{{instructor_id}}</td><td>{{name}}</td><td>{{account_id}}</td><td>{{total_students}}</td></tr>
    {{/each}}
  </tbody>
</table>

<h5 class="mt-4">Học viên</h5>
<table class="table table-sm table-hover">
  <thead><tr><th>ID</th><th>Tên</th><th>Email</th></tr></thead>
  <tbody>
    {{#each students}}
    <tr><td>{{student_id}}</td><td>{{name}}</td><td>{{account_id}}</td></tr>
    {{/each}}
  </tbody>
</table>
