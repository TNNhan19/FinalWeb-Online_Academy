<a href="/admin" class="btn-back mb-4 d-inline-flex align-items-center gap-2">
  <i class="bi bi-arrow-left"></i> Quay lại Bảng điều khiển
</a>

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
  <h4 class="fw-bold mb-0 d-flex align-items-center" style="color: var(--primary-color);">
    <i class="bi bi-mortarboard me-2"></i> Quản lý khóa học
  </h4>

  <button
    class="btn-gradient btn-blue d-inline-flex align-items-center justify-content-center gap-2 px-4 py-3 fw-semibold w-auto"
    data-bs-toggle="modal" data-bs-target="#addCourseModal">
    <i class="bi bi-plus-circle fs-5"></i> Thêm khóa học mới
  </button>
</div>
<!-- Bộ lọc khóa học -->
<form method="GET" action="/admin/courses" class="d-flex flex-wrap align-items-end gap-3 mb-4">
  <div>
    <label class="form-label fw-semibold">Lọc theo lĩnh vực</label>
    <select name="category" class="form-select">
      <option value="">-- Tất cả lĩnh vực --</option>
      {{#each categories}}
      <option value="{{category_id}}" {{#if (eq ../selectedCategory category_id)}}selected{{/if}}>
        {{name}}
      </option>
      {{/each}}
    </select>
  </div>

  <div>
    <label class="form-label fw-semibold">Lọc theo giảng viên</label>
    <select name="instructor" class="form-select">
      <option value="">-- Tất cả giảng viên --</option>
      {{#each instructors}}
      <option value="{{instructor_id}}" {{#if (eq ../selectedInstructor instructor_id)}}selected{{/if}}>
        {{name}}
      </option>
      {{/each}}
    </select>
  </div>

  <div class="d-flex align-items-center gap-2">
    <button type="submit" class="btn btn-outline-primary fw-semibold">
      <i class="bi bi-funnel"></i> Lọc
    </button>
    <a href="/admin/courses" class="btn btn-outline-secondary fw-semibold">
      <i class="bi bi-x-circle"></i> Xóa lọc
    </a>
  </div>
</form>

<!-- Form thêm khoá học-->
<div class="modal fade" id="addCourseModal" tabindex="-1" aria-labelledby="addCourseModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xxl modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4">
      <div class="modal-header" style="background: var(--primary-color); color: #fff;">
        <h5 class="modal-title fw-bold d-flex align-items-center" id="addCourseModalLabel">
          <i class="bi bi-book-half me-2"></i> Thêm khóa học mới
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body bg-light p-4">
        <form method="POST" action="/admin/courses/add" enctype="multipart/form-data" class="form-grid">

          <div class="fg-6 form-pane">
            <label class="form-label">Tiêu đề khóa học</label>
            <input type="text" name="title" class="form-control" placeholder="VD: Mastering Python for AI" required>
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Lĩnh vực</label>
            <select name="category_id" class="form-select" required>
              <option value="">-- Chọn lĩnh vực --</option>
              {{#each categories}}
              <option value="{{category_id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Giảng viên</label>
            <select name="instructor_id" class="form-select" required>
              <option value="">-- Chọn giảng viên --</option>
              {{#each instructors}}
              <option value="{{instructor_id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Ảnh đại diện khóa học</label>
            <input type="file" name="image" class="form-control" accept="image/*" required>
          </div>

          <div class="fg-12 form-pane">
            <label class="form-label">Mô tả ngắn</label>
            <textarea name="description" class="form-control" rows="3"
              placeholder="Mô tả khái quát nội dung khóa học..." required></textarea>
          </div>

          <div class="fg-12 form-pane">
            <label class="form-label">Nội dung chi tiết</label>
            <textarea name="detail_html" class="form-control" rows="5"
              placeholder="Mô tả chi tiết bài học, nội dung và mục tiêu..."></textarea>
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Tổng thời lượng (giờ)</label>
            <input type="number" name="total_hours" class="form-control" min="0" step="0.1" placeholder="VD: 15">
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Tổng số bài giảng</label>
            <input type="number" name="total_lectures" class="form-control" min="0" placeholder="VD: 25">
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Giá gốc ($)</label>
            <input type="number" name="original_price" class="form-control" min="0" step="0.01" placeholder="VD: 29.99">
          </div>

          <div class="fg-6 form-pane">
            <label class="form-label">Giá khuyến mãi ($)</label>
            <input type="number" name="current_price" class="form-control" min="0" step="0.01" placeholder="VD: 19.99">
          </div>

          <div class="fg-12 text-end">
            <button type="submit" class="btn-gradient btn-green px-4 py-2 fw-semibold">
              <i class="bi bi-save2 me-1"></i> Lưu khóa học
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<div class="table-responsive shadow-sm rounded-3">
  <table class="table table-hover table-striped align-middle table-bordered mb-0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Tiêu đề</th>
        <th>Giảng viên</th>
        <th>Lĩnh vực</th>
        <th class="text-end">Giá</th>
        <th class="text-center">Trạng thái</th>
        <th class="text-center">Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>{{course_id}}</td>
        <td class="fw-semibold">{{title}}</td>
        <td>{{instructor}}</td>
        <td>{{category}}</td>
        <td class="text-end text-primary fw-semibold">{{current_price}}$</td>
        <td class="text-center">
          <form method="POST" action="/admin/courses/update-status/{{course_id}}"
            class="d-inline-flex align-items-center gap-2">
            <select name="newStatus" class="form-select form-select-sm" style="width:140px;">
              <option value="incomplete" {{#if (eq status "incomplete" )}}selected{{/if}}>Chưa hoàn thành</option>
              <option value="completed" {{#if (eq status "complete" )}}selected{{/if}}>Hoàn thành</option>
              <option value="active" {{#if (eq status "active" )}}selected{{/if}}>Đang hoạt động</option>
              <option value="suspended" {{#if (eq status "suspended" )}}selected{{/if}}>Đình chỉ</option>
            </select>
            <button type="submit" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-arrow-repeat"></i>
            </button>
          </form>
        </td>
        <td class="text-center">
          <form method="POST" action="/admin/courses/delete/{{course_id}}" class="d-inline">
            <button class="btn btn-sm btn-outline-danger btn-compact">
              <i class="bi bi-trash"></i> Gỡ bỏ
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<script>
  document.querySelectorAll('select[name="category"], select[name="instructor"]').forEach(select => {
    select.addEventListener('change', () => select.form.submit());
  });
</script>