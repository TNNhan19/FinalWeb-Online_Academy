<section class="auth-hero">
  <div class="auth-container">
    <!-- Brand -->
    <div class="brand">
      <div class="brand-icon"><i class="bi bi-mortarboard"></i></div>
      <h1 class="brand-title">Online Academy</h1>
      <p class="brand-sub">Learn and teach with passion</p>
    </div>

    <!-- Card -->
    <div class="auth-card">
      <div class="tabs">
        <button class="tab active">Login</button>
        <button class="tab" onclick="location.href='/auth/signup'">Sign Up</button>
      </div>

      <form class="pane show" method="post" action="/auth/login">
        {{#if error}}<div class="alert alert-danger small text-center mb-3">{{error}}</div>{{/if}}

        <label class="field">
          <span>Email</span>
          <div class="control">
            <i class="bi bi-envelope"></i>
            <input type="email" name="email" placeholder="Enter your email" required value="{{email}}">
          </div>
        </label>

        <label class="field">
          <span>Password</span>
          <div class="control">
            <i class="bi bi-lock"></i>
            <input type="password" name="password" placeholder="Enter your password" required>
          </div>
        </label>
            <button class="btn-primary" type="submit">Login</button>
      </form>

      <!-- Divider -->
      <div class="d-flex align-items-center gap-2 my-3 px-3">
        <hr class="flex-grow-1 m-0"/>
        <span class="text-muted small">Hoặc</span>
        <hr class="flex-grow-1 m-0"/>
      </div>

      <!-- Google button -->
      <div class="px-3 pb-3">
        <a href="/auth/google" class="btn w-100 d-flex align-items-center justify-content-center gap-2"
           style="border:1px solid #e5e7eb;border-radius:12px;padding:12px 14px;background:#fff;">
          <!-- Google SVG nhỏ, không cần ảnh ngoài -->
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 48 48">
            <path fill="#FFC107" d="M43.6 20.5H42v-.1H24v7.2h11.3C33.7 31.7 29.3 35 24 35c-6.1 0-11-4.9-11-11s4.9-11 11-11c2.8 0 5.4 1.1 7.3 2.8l5.1-5.1C32.9 7.1 28.6 5.3 24 5.3 13.5 5.3 5 13.8 5 24.3S13.5 43.3 24 43.3c10.2 0 18.6-8.3 18.6-18.6 0-1.2-.1-2.3-.4-3.2z"/>
            <path fill="#FF3D00" d="M6.3 14.7l5.9 4.3C14.1 15.2 18.6 12 24 12c2.8 0 5.4 1.1 7.3 2.8l5.1-5.1C32.9 7.1 28.6 5.3 24 5.3c-7.6 0-14.1 4.2-17.7 10.4z"/>
            <path fill="#4CAF50" d="M24 43.3c5.2 0 10-2 13.5-5.3l-6.2-4.9c-2 1.4-4.6 2.2-7.3 2.2-5.3 0-9.8-3.3-11.4-7.9l-6.1 4.7C7.2 38.8 15 43.3 24 43.3z"/>
            <path fill="#1976D2" d="M43.6 20.5H42v-.1H24v7.2h11.3c-1.1 3.1-3.6 5.5-6.7 6.6l6.2 4.9c3.6-3.3 5.8-8.1 5.8-13.8 0-1.2-.1-2.3-.4-3.2z"/>
          </svg>
          <span class="fw-semibold">Login with Google</span>
        </a>
      </div>

      <div class="small center mt-3">
        Don't have an account? <a href="/auth/signup">Sign Up</a>
      </div>
    </div>
  </div>
</section>
